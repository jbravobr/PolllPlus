@model PagedList.IPagedList<PollPlus.Domain.Filial>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Listar Filiais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="">

            @Html.ActionLink("Nova Filial", "NovaFilial", "Empresa", null, new { @class = "btn btn-info" })

            <br />
            <div class="header">
                <h3>Listagem das Filais Cadastradas</h3>
            </div>

            <div class="content">
                <div class="table-responsive">
                    <div role="grid" class="dataTables_wrapper form-inline" id="datatable_wrapper">
                        <table id="datatable" class="table table-bordered dataTable" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th role="columnheader" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 232px;" aria-label="">
                                        <strong>Nome</strong>
                                    </th>
                                    <th role="columnheader" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 232px;" aria-label="">
                                        <strong>Latitude</strong>
                                    </th>
                                    <th role="columnheader" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 232px;" aria-label="">
                                        <strong>Longitude</strong>
                                    </th>
                                    <th role="columnheader" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 232px;" aria-label="">
                                        <strong>Empresa Pai</strong>
                                    </th>
                                    <th role="columnheader" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 232px;" aria-label="">
                                        <strong>Data Criação</strong>
                                    </th>
                                    <th role="columnheader" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 120px;" aria-label="">
                                    </th>
                                </tr>
                            </thead>
                            <tbody role="alert" aria-live="polite" aria-relevant="all">

                                @foreach (var _filial in Model)
                                {
                                    <tr class="gradeA odd">
                                        <td class=" ">@_filial.Nome</td>
                                        <td class=" ">@_filial.Latitude</td>
                                        <td class=" ">@_filial.Longitude</td>
                                        <td class=" ">@_filial.Empresa.Nome</td>
                                        <td class=" ">@_filial.DataCriacao.ToShortDateString()</td>
                                        @*<td class="center ">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-default btn-xs">Ações</button>
                                                <button type="button" class="btn btn-xs btn-primary dropdown-toggle" data-toggle="dropdown">
                                                    <span class="caret"></span>
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li><a href="@Url.Action("EditarEmpresa", "Empresa", new { empresaId = _empresa.Id })">Alterar</a></li>
                                                    <li><a href="javascript: if(confirm('Deseja remover esta empresa?')) {window.location.href='@Url.Action("RemoverEmpresa", "Empresa", new { empresaId = _empresa.Id })';}">Remover</a></li>
                                                </ul>
                                            </div>
                                        </td>*@
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @Html.PagedListPager(Model, page => Url.Action("ListarFiliais", "Empresa", new { pagina = page }),
            new PagedListRenderOptions
            {
                DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
                DisplayLinkToPreviousPage = PagedListDisplayMode.IfNeeded,
                Display = PagedListDisplayMode.IfNeeded,
                LinkToNextPageFormat = "Próximo",
                LinkToPreviousPageFormat = "Anterior"
            })
        </div>
    </div>
</div>