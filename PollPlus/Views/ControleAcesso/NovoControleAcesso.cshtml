@using PollPlus.Helpers;

@{
    ViewBag.Title = "Novo Controle Acesso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header">
    <h3>Cadastro de Acessos</h3>
</div>

<div class="content tamanho-reduzido">

    @if (ViewBag.Mesagem != null)
    {
        @*@Html.RenderPartial("~/Views/Shared/_PartialExibirColecaoDeErros.cshtml", (List<string>)ViewBag.Mesagem);*@
    }

    @using (Html.BeginForm("NovoControleAcesso", "ControleAcesso", FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        var acessosEnum = (IEnumerable<SelectListItem>)ViewData["AcessosEnum"];

        <div class="form-group">
            @Html.Label("Acesso", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownList("tipoAcesso", acessosEnum, "Selecione uma opção")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Empresa", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.Partial("_DropDownListForEmpresas")
            </div>
        </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary" type="submit">Salvar</button>
                </div>
            </div>
    }

</div>