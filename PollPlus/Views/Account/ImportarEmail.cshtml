@model int?

    @{
        ViewBag.Title = "ImportarBlackList";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Importação de Pessoas</h2>

    @if (Model != null && Model == 1)
    {
        @section Script
    {
            <script src="~/Scripts/jquery-2.1.3.min.js"></script>
            <script>
                $(function () {

                    alert('Dados importados com sucesso!');
                });
            </script>

        }
    }
    else
    {
        @section Script
    {
            <script src="~/Scripts/jquery-2.1.3.min.js"></script>
            <script>
                $(function () {

                    alert('Houve um erro na importação, tente novamente');
                });
            </script>

        }

    }

    <div class="content tamanho-reduzido">

        @using (Html.BeginForm("ImportarEmail", "Account", FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.Label("Logo", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBox("file", new { type = "file" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary" type="submit">Salvar</button>
                </div>
            </div>
        }

    </div>
