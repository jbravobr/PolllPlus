@model int?

@{
    ViewBag.Title = "PushProgramado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Importação de arquivo para Envio de Push Programado</h2>

@if (Model != null && Model == 1)
{
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script>
        $(function () {

            alert('Pushs programados com sucesso!');
        });
    </script>
}
else if (Model == 0)
{
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script>
        $(function () {

            alert('Houve um erro na importação e/ou programação. Talvez você não tenha mais saldo ? Tente novamente');
        });
    </script>
}

<div class="content tamanho-reduzido">

    @using (Html.BeginForm("NovoAgendamentoPorAcaoImportacao", "Push", FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.Label("Arquivo", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="file" name="file" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-primary" type="submit">Salvar</button>
            </div>
        </div>
    }

</div>
