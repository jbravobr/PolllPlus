@model PollPlus.Models.RespostaViewModel

@{
    List<PollPlus.Models.RespostaViewModel> respostas = null;

    if (ViewData.ContainsKey("Respostas"))
    {
        respostas = (List<PollPlus.Models.RespostaViewModel>)ViewData["Respostas"];
    }
}

@if (respostas != null && respostas.Any())
{
    foreach (var resposta in respostas)
    {
        <div id="form-respostas" class="form-group">
            <div class="col-sm-10">
                <input type="text" class="form-control" disabled="disabled" value="@resposta.TextoResposta" />
            </div>
        </div>
    }
}

<div id="form-respostas" class="form-group">
    <div class="col-sm-10">
        @Html.TextBoxFor(x => x, new { placeholder = "Insira o texto da resposta", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TextoResposta)
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <a class="btn btn-primary" id="btnNovaResposta">Nova Resposta</a>
    </div>
</div>
