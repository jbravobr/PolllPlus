@model PollPlus.Models.PerguntaViewModel

<div id="form-respostas" class="form-group">
    <div class="col-sm-10">
        @Html.TextBoxFor(x => x.Respostas, new { placeholder = "Insira o texto da resposta", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Respostas)
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <a class="btn btn-primary" id="btnNovaResposta">Nova Resposta</a>
    </div>
</div>
